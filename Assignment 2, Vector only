## Stripped down version of Assignment 2 that only works on a vector. 
# Previous attempts at using this with a matrix did not work


## Initial vectors to use for tesing. 
# 1. Run cacheMean(x). Return value = 50.5
# 2. From console, x <- makeVector(V2)
# 3. Run cacheMean(x) again. Return value = 250
# 4. Run cacheMean(x) again. You get message "getting cached data", value = 250
V1 <- 1:100
V2 <- 200:300
x <- makeVector(V1)

        
        makeVector <- function(x = numeric()) {
                m <- NULL
                set <- function(y) {
                        x <<- y         # y is the value passed when calling x$set
                        m <<- NULL
                }
                get <- function() x
                setmean <- function(mean) m <<- mean
                getmean <- function() m
                list(set = set, get = get,  # list of functions that are passed to cachemean
                     setmean = setmean,
                     getmean = getmean)
                
        } # End of makeVector   
        
        cacheMean <- function(x, ...) {
                m <- x$getmean()
                if(!is.null(m)) {
                        message("getting cached data")
                        return(m)
                        message("Inside cachemean, m:")
                        print(m)
                }
                data <- x$get()
                m <- mean(data, ...)
                x$setmean(m)
                m
        }# End of cachemean 
